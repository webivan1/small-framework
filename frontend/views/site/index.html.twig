{% extends "layout.html.twig" %}

{% block body %}
    {{ parent() }}

    <h1>Hello {{ name }}</h1>

    {% if errors %}

        <ul style="background: darkred">
           {% for key, items in errors %}
               <li style="color: white">
                   <b>{{ key }}</b> - {{ items|join(',') }}
               </li>
           {% endfor %}
        </ul>

    {% endif %}

{% endblock %}